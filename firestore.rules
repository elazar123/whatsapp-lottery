rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Super Admin email
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'elazar12321@gmail.com';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Super Admin can read all users
      allow read: if isSuperAdmin();
    }
    
    // Campaigns collection
    match /campaigns/{campaignId} {
      // Anyone can read active campaigns (for public pages)
      allow read: if true;
      
      // Only authenticated owner can create/update/delete
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null 
        && (resource.data.managerId == request.auth.uid || isSuperAdmin());
      
      // Leads subcollection
      match /leads/{leadId} {
        // Anyone can create leads (public registration)
        allow create: if true;
        
        // Anyone can update their own tasks (by lead ID stored in session)
        allow update: if true;
        
        // Campaign owner or Super Admin can read leads
        allow read: if request.auth != null 
          && (get(/databases/$(database)/documents/campaigns/$(campaignId)).data.managerId == request.auth.uid || isSuperAdmin());
        
        // Only campaign owner or Super Admin can delete leads
        allow delete: if request.auth != null 
          && (get(/databases/$(database)/documents/campaigns/$(campaignId)).data.managerId == request.auth.uid || isSuperAdmin());
      }
    }
  }
}
