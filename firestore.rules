rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Super Admin email
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'elazar12321@gmail.com';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Super Admin can read all users
      allow read: if isSuperAdmin();
    }
    
    // Campaigns collection
    match /campaigns/{campaignId} {
      // Anyone can read active campaigns
      allow read: if true;
      
      // Anyone can increment views/leads count (public actions)
      allow update: if (request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['viewsCount', 'leadsCount', 'updatedAt']));

      // Only authenticated owner can create/delete or full update
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null 
        && (resource.data.managerId == request.auth.uid || isSuperAdmin());
      
      // Leads subcollection
      match /leads/{leadId} {
        // Public access for registration flow
        allow create, read, update: if true;
        
        // Only campaign owner or Super Admin can delete leads
        allow delete: if request.auth != null 
          && (get(/databases/$(database)/documents/campaigns/$(campaignId)).data.managerId == request.auth.uid || isSuperAdmin());
      }
    }
  }
}
